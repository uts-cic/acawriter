{
  "executionRoleArn": "$TASK_EXECUTION_ROLE",
  "containerDefinitions": [
    {
      "name": "app",
      "image": "<IMAGE_APP>",
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/$TASKDEF_NAME/app",
          "awslogs-region": "$AWS_DEFAULT_REGION",
          "awslogs-stream-prefix": "app"
        }
      },
      "portMappings": [
        {
          "hostPort": 9000,
          "protocol": "tcp",
          "containerPort": 9000
        }
      ],
      "environment": [
        {
          "name": "AAF_AUD",
          "value": "$AAF_AUD"
        },
        {
          "name": "AAF_LINK",
          "value": "$AAF_LINK"
        },
        {
          "name": "AAF_SECRET",
          "value": "$AAF_SECRET"
        },
        {
          "name": "APP_DEBUG",
          "value": "$APP_DEBUG"
        },
        {
          "name": "APP_ENV",
          "value": "$APP_ENV"
        },
        {
          "name": "APP_KEY",
          "value": "$APP_KEY"
        },
        {
          "name": "APP_NAME",
          "value": "$APP_NAME"
        },
        {
          "name": "APP_URL",
          "value": "$APP_URL"
        },
        {
          "name": "AWS_ACCESS_KEY_ID",
          "value": "$AWS_ACCESS_KEY_ID"
        },
        {
          "name": "AWS_BUCKET",
          "value": "$AWS_BUCKET"
        },
        {
          "name": "AWS_DEFAULT_REGION",
          "value": "$AWS_DEFAULT_REGION"
        },
        {
          "name": "AWS_SECRET_ACCESS_KEY",
          "value": "$AWS_SECRET_ACCESS_KEY"
        },
        {
          "name": "BROADCAST_DRIVER",
          "value": "$BROADCAST_DRIVER"
        },
        {
          "name": "CACHE_DRIVER",
          "value": "$CACHE_DRIVER"
        },
        {
          "name": "DB_CONNECTION",
          "value": "$DB_CONNECTION"
        },
        {
          "name": "DB_DATABASE",
          "value": "$DB_DATABASE"
        },
        {
          "name": "DB_HOST",
          "value": "$DB_HOST"
        },
        {
          "name": "DB_PASSWORD",
          "value": "$DB_PASSWORD"
        },
        {
          "name": "DB_PORT",
          "value": "$DB_PORT"
        },
        {
          "name": "DB_USERNAME",
          "value": "$DB_USERNAME"
        },
        {
          "name": "LOG_CHANNEL",
          "value": "$LOG_CHANNEL"
        },
        {
          "name": "MAIL_DRIVER",
          "value": "$MAIL_DRIVER"
        },
        {
          "name": "MAIL_ENCRYPTION",
          "value": "$MAIL_ENCRYPTION"
        },
        {
          "name": "MAIL_FROM_ADDRESS",
          "value": "$MAIL_FROM_ADDRESS"
        },
        {
          "name": "MAIL_FROM_NAME",
          "value": "$MAIL_FROM_NAME"
        },
        {
          "name": "MAIL_HOST",
          "value": "$MAIL_HOST"
        },
        {
          "name": "MAIL_PASSWORD",
          "value": "$MAIL_PASSWORD"
        },
        {
          "name": "MAIL_PORT",
          "value": "$MAIL_PORT"
        },
        {
          "name": "MAIL_USERNAME",
          "value": "$MAIL_USERNAME"
        },
        {
          "name": "MIX_PUSHER_APP_CLUSTER",
          "value": "$MIX_PUSHER_APP_CLUSTER"
        },
        {
          "name": "MIX_PUSHER_APP_KEY",
          "value": "$MIX_PUSHER_APP_KEY"
        },
        {
          "name": "PUSHER_APP_ID",
          "value": "$PUSHER_APP_ID"
        },
        {
          "name": "PUSHER_APP_CLUSTER",
          "value": "$PUSHER_APP_CLUSTER"
        },
        {
          "name": "PUSHER_APP_KEY",
          "value": "$PUSHER_APP_KEY"
        },
        {
          "name": "PUSHER_APP_SECRET",
          "value": "$PUSHER_APP_SECRET"
        },
        {
          "name": "QUEUE_CONNECTION",
          "value": "$QUEUE_CONNECTION"
        },
        {
          "name": "REDIS_HOST",
          "value": "$REDIS_HOST"
        },
        {
          "name": "REDIS_PASSWORD",
          "value": "$REDIS_PASSWORD"
        },
        {
          "name": "REDIS_PORT",
          "value": "$REDIS_PORT"
        },
        {
          "name": "SESSION_DRIVER",
          "value": "$SESSION_DRIVER"
        },
        {
          "name": "SESSION_LIFETIME",
          "value": "$SESSION_LIFETIME"
        },
        {
          "name": "TAP_API",
          "value": "$TAP_API"
        },
        {
          "name": "CACHE_BUST",
          "value": "$COMMIT_ID"
        }
      ],
      "essential": true
    },
    {
      "name": "nginx",
      "image": "<IMAGE_NGINX>",
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/$TASKDEF_NAME/nginx",
          "awslogs-region": "ap-southeast-2",
          "awslogs-stream-prefix": "nginx"
        }
      },
      "portMappings": [
        {
          "hostPort": 443,
          "protocol": "tcp",
          "containerPort": 443
        }
      ],
      "dependsOn": [
        {
          "containerName": "app",
          "condition": "START"
        },
        {
          "containerName": "socketio",
          "condition": "START"
        }
      ],
      "essential": true
    },
    {
      "name": "socketio",
      "image": "<IMAGE_SOCKETIO>",
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/$TASKDEF_NAME/socketio",
          "awslogs-region": "ap-southeast-2",
          "awslogs-stream-prefix": "socketio"
        }
      },
      "portMappings": [
        {
          "hostPort": 3000,
          "protocol": "tcp",
          "containerPort": 3000
        }
      ],
      "environment": [
        {
          "name": "REDIS_HOST",
          "value": "$REDIS_HOST"
        },
        {
          "name": "REDIS_PASSWORD",
          "value": "$REDIS_PASSWORD"
        },
        {
          "name": "REDIS_PORT",
          "value": "$REDIS_PORT"
        }
      ],
      "essential": true
    }
  ],
  "requiresCompatibilities": [
    "FARGATE"
  ],
  "networkMode": "awsvpc",
  "cpu": "512",
  "memory": "1024",
  "family": "$TASKDEF_NAME"
}
